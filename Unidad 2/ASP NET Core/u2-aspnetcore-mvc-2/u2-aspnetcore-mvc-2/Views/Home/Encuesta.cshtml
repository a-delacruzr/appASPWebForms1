@model ViewModelAlumnoEncuesta
<h1>Encuesta</h1>
<form asp-action="Encuesta" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre: </label>
        <input asp-for="Nombre"/>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Carrera">Carrera: </label>
        <input asp-for="Carrera"/>
    </div>
    <div class="form-group">
        <label asp-for="RegresarClases">Puede regresar a clases presenciales? </label>
        <select asp-for="RegresarClases">
            <option value="">Elija una opción</option>
            <option value="true">Sí</option>
            <option value="false">No</option>
        </select>
    </div>
    <input type="submit" name="Enviar" value="Enviar" />
</form>